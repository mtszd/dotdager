---
import BaseHead from './BaseHead.astro';
import Header from 'src/modules/navigation/navbar/Header.astro';
import Footer from 'src/modules/navigation/footer/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const { 
    title = SITE_TITLE, 
    description = SITE_DESCRIPTION, 
    image = '/blog-placeholder-1.jpg'
} = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} image={image} />
		<style>
			
		</style>
	</head>

	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>

body {
	min-height: 100dvh;
	display: grid;
	grid-template-rows: auto 1fr auto;
}

</style>