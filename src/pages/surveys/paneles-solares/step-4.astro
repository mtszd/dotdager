---
import SurveyLayout from "src/layouts/SurveyLayout.astro";
import SurveyNav from "src/modules/survey/components/SurveyNav.svelte";
import RadioForm from "src/modules/survey/components/RadioForm.svelte";

const currentStep = 4;
const baseUrl = "/surveys/paneles-solares/step-";
const prevUrl = currentStep > 1 ? `${baseUrl}${currentStep - 1}` : "/surveys";

const defaultNextUrl = `${baseUrl}${currentStep + 1}`;
const techoNextUrl = `${baseUrl}${currentStep}-b`;

let nextUrl = defaultNextUrl;

const options = [
    { value: "techo", label: "Techo" },
    { value: "suelo", label: "Suelo" },
];

const inputName = "superficie de instalacion";
const inputType = "radio";
const inputSelector = `input[name='${inputName}']`;
---

<SurveyLayout>
    <h1 style="text-align: center">Selecciona el espacio en el que planea realizar la instalaci√≥n</h1>

    <RadioForm 
        options={options}
        inputName={inputName}
        client:load
    />  

    <SurveyNav
        prevUrl={prevUrl}
        nextUrl={nextUrl}
        inputType={inputType}
        inputSelector={inputSelector}
        client:load
    />

</SurveyLayout>
