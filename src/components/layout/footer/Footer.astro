---
const today = new Date();
import Logo from '../../Logo.astro';
import Rrss from '../../Rrss.svelte';
---
	
<footer>
<div class="footer-content">
	<div class="footer-group">
		<Logo />
			<ul>
				<li><a href="#">Red de Instaladores</a></li>
				<li><a href="#">Oportunidades de Empleo</a></li>
				<li><a href="#">Sobre nosotros</a></li>
				<li><a href="#">Contáctanos</a></li>
			</ul>
		<Rrss />
	</div>
	<div class="footer-group">
		<h6>CATEGORÍAS DE PRODUCTOS</h6>
			<ul>
				<li><a href="#">Sistema Solar Fotovoltaico</a></li>
				<li><a href="#">Sistema Solar Térmico</a></li>
				<li><a href="#">Bombeo Solar</a></li>
				<li><a href="#">Bombas de calor</a></li>
				<li><a href="#">Inversores</a></li>
				<li><a href="#">Baterías</a></li>
				<li><a href="#">Otros productos</a></li>
			</ul>
	</div>

	<div class="footer-group">
		<h6>Contrataciones</h6>
		<div class="links">
			<ul>
				<li><a href="#">Soluciones hogareñas</a></li>
				<li><a href="#">Soluciones para negocios</a></li>
				<li><a href="#">Soluciones empresariales</a></li>
				<li><a href="#">Mantenimiento</a></li>
			</ul>
		</div>
		<h6>RECURSOS</h6>
		<ul>
			<li><a href="#">Blog y Noticias</a></li>
			<li><a href="#">Guías de energía limpia</a></li>
		</ul>
	</div>

</div>
	<div class="footer-bottom">
		<p><a href="#">Sunvey</a> &copy;  {today.getFullYear()} Todos los derechos reservados. <a href="#">Condiciones de uso</a> y <a href="#">Política de privacidad</a></p>
	</div>
</footer>


<style>

h6 {
	text-transform: uppercase;
	font-size: 0.75rem;
	letter-spacing: 0.1rem;
	color: var(--color-text-category);
}

footer {

    background-color: var(--color-primary);
    color: var(--color-text-light);
	display: block;
    
}

.footer-content {
	display: flex;
	justify-content: center;
	align-items: center;
    flex-direction: column;
    padding: 4rem 2rem 6rem 2rem;	
	gap: 2rem;
}

.footer-group {
	width: 156px;
	display: flex;
    flex-direction: column;
    gap: 0.8rem;
}

ul {
    list-style: none;
    padding: 0;
}

ul li {
    margin-bottom: 0.4rem;
}

a {	
	text-transform: uppercase;
    color: var(--color-text-light);
    text-decoration: none;
	font-size:0.8rem;
    font-weight:100;
}

.footer-bottom {
    background-color: var(--color-secondary);
    color: var(--color-text-light);
    text-align: center;
	padding: 4rem 2rem; 
}

.footer-bottom a {
	color: var(--color-text-light);
	font-weight:700;
}
@media (width > 377px) {

	.footer-group {
	width: 200px;
	}
}


@media (width > 768px) {

    .footer-content {
		max-width: 100vw;
        flex-direction: row;
        justify-content: space-evenly;
		margin-bottom: 2rem;
    }
	.footer-group {
	width: 250px;
	}
}
</style>