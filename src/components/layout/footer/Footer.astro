<style>

footer {

    background-color: var(--color-primary);
    color: var(--color-text-light);
	display: block;
    
}

.footer-content {
	display: flex;
	justify-content: center;
	align-items: center;
    flex-direction: column;
    padding-top: 4rem;
	gap: 2rem;
}

.footer-section {
	display: flex;
	width: 50vw;
    flex-direction: column;
	justify-content: left;
    gap: 1rem;
}

.footer-section:last-child {
	margin-bottom: 4rem;
}

.footer-section h6 {
	color: var(--color-text-category);
	font-size:smaller;
    font-weight:900;
    text-transform: uppercase;
}

.footer-section ul {
    list-style: none;
    padding: 0;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
}

.footer-section ul li a {
    color: var(--color-text-light);
    text-decoration: none;
	font-size:medium;
    font-weight:300;
}

.footer-bottom {
    background-color: var(--color-secondary);
    color: var(--color-text-light);
    text-align: center;
	padding: 4rem 2rem; 
}

.footer-bottom a {
	color: var(--color-text-light);
	font-weight:700;
}

@media (width > 768px) {

    .footer-content {
		max-width: 100vw;
        flex-direction: row;
        justify-content: space-evenly;
		margin-bottom: 2rem;
    }
    .footer-section {
		width: 200px;
        
    }
}
</style>